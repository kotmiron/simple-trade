{% extends 'SimpleTradeBundle::base.html.twig' %}

{% block body %}
	<h2>Список ролей</h2>
    <a href="roles/add" class="btn">Добавить</a>

    <table class="info-list-table table table-striped table-hover">
      <thead>
          <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Имя</th>
            <th>Действия</th>
          </tr>
      </thead>
	 <tbody>
      {% for role in roles %}
        <tr>
          <td>
            {{ role.getId() }}
          </td>
          <td>
            {{ role.getTitle() }}
          </td>
          <td>
            {{ role.getName() }}
          </td>
          <td>
            <a href="roles/change/{{ role.getId() }}">изменить</a>
			<a href="roles/remove/{{ role.getId() }}">удалить</a>
          </td>
        </tr>
      {% endfor %}
	  </tbody>
    </table>
{% endblock %}