{% extends 'SimpleTradeBundle::layout.html.twig' %}

{% block body %}
<div style="width: 100%; height: 100px; border: #000000 solid 1px;">


</div>
<table width="100%" border="1">
    <tr>
        <td><a href="{{ path('public_index') }}">Главная</a></td>
        <td><a href="{{ path('public_register') }}">Регистрация</a></td>
        <td>Стоимость</td>
        <td><a href="{{ path('public_auctions') }}">Аукционы</a></td>
        <td><a href="{{ path('public_specialists') }}">Специалисты</a></td>
    </tr>
</table>
<table width="100%" height="100%" border="1">
    <tr>
        <td>
            <div style="padding: 20px;">
                <h2>Прайс лист за услуги</h2>
                <table width="100%" border="1">
                    <tr>
                        <td><b>Название</b></td>
                        <td><b>Цена</b></td>
                    </tr>
                    {% for tariff in tariffs %}
                    <tr>
                        <td>{{ tariff.title }}</td>
                        <td>{{ tariff.cost }}</td>
                    </tr>                    
                    {% endfor %}
                </table>
            </div>
        </td>
        <td width="300">
            {% render "SimpleTradeBundle:Security:login" %}
        </td>
    </tr>
</table>

{% endblock %}